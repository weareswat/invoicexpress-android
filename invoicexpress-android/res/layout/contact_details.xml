<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://pt.rupeal.invoicexpress.layouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/background"
	android:scrollbarStyle="outsideOverlay"
	android:overScrollMode="never"    
>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>    

	    <RelativeLayout 
			android:layout_width="match_parent"
	  		android:layout_height="wrap_content"     	        
	    >

	        <pt.rupeal.invoicexpress.widgets.TextViewInvoiceXpress
		        android:id="@+id/contact_details_title_name" 
		        android:layout_width="match_parent"
		    	android:layout_height="68dp"
		    	android:textColor="@color/green_normal"
		    	android:textSize="16sp"
		    	android:background="@color/green_shadow"
		    	android:paddingLeft="16dp"
		    	android:paddingRight="16dp"
		    	android:gravity="center_vertical"
			/>
		    
		    <ImageView
		        android:id="@+id/contact_details_title_name_image"
			    android:contentDescription="@string/contacts"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:src="@drawable/icon_3_selected"
	    		android:layout_centerVertical="true"
	    		android:paddingRight="40dp"
			/>
	        
	    </RelativeLayout>
	    
	    <!-- View seperate horizontal line associated to TextView name -->
	    <View 
	    	android:layout_width="match_parent"
	    	android:layout_height="2dp"
	    	android:background="@color/green_normal"    
		/>
	    
	    <!-- Button get invoices -->
	    <Button 
	        android:id="@+id/contact_details_button"
			android:layout_width="match_parent"
	    	android:layout_height="42sp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"
	  		android:layout_marginTop="32dp"
	    	android:background="@color/button_background"
	    	android:text="@string/contact_details_button"
		/>
	    	<!-- android:textColor="@color/button_text_color" -->       
	    
	    <pt.rupeal.invoicexpress.layouts.SubTitleLayout
	        android:id="@+id/contact_details_preferred_subtitle"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="32dp" 
	    />
	
	    <LinearLayout 
	        android:id="@+id/contact_details_preferred_name_layout"
			android:layout_width="match_parent"
	    	android:layout_height="60dp"
			android:orientation="vertical"    	
	    >
	        
			<!-- TextView preferred name -->
			<pt.rupeal.invoicexpress.widgets.TextViewInvoiceXpress
			    android:id="@+id/contact_details_preferred_name" 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginLeft="24dp"
				android:layout_marginRight="24dp"
		  		android:textColor="@color/details_text"
		  		android:textSize="18sp"
			/>
			
			<!-- TextView NAME -->
			<TextView 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		  		android:layout_marginLeft="24dp"
		    	android:text="@string/contact_details_name" 
		    	android:textSize="11sp"
			/>	
	    </LinearLayout>
	    
		<!-- View seperate line associated to label preferred name -->
	    <View
	        android:id="@+id/contact_details_preferred_name_layout_line"
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"     	   
	    	android:background="@color/line_seperator"
		/>
			
		<pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout 
		    android:id="@+id/contact_details_preferred_phone"
			android:layout_width="match_parent"
 			android:layout_height="60dp"   		    
		/>
    
		<!-- View seperate line associated to label preferred phone -->
	    <View 
	        android:id="@+id/contact_details_preferred_phone_line"
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"      	    
	    	android:background="@color/line_seperator"
		/>

		<pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout 
		    android:id="@+id/contact_details_preferred_email"
			android:layout_width="match_parent"
 			android:layout_height="60dp"   		    
		/>
		
	    <View
	        android:id="@+id/contact_details_preferred_email_line" 
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"      	    
	    	android:background="@color/line_seperator"
		/>

	    <pt.rupeal.invoicexpress.layouts.SubTitleLayout
	        android:id="@+id/contact_details_general_subtitle"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="32dp" 
	    />	    
	    	    
	    <LinearLayout
	        android:id="@+id/contact_details_address_layout" 
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
			android:orientation="vertical"    	
	    >
	        
			<!-- TextView address -->
			<TextView
			    android:id="@+id/contact_details_address" 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="-6dp"
				android:layout_marginLeft="24dp"
				android:layout_marginRight="24dp"
		  		android:textColor="@color/details_text"
		  		android:textSize="18sp"
			/>

			<!-- TextView postal code -->
			<TextView
			    android:id="@+id/contact_details_postal_code" 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginBottom="-6dp"
				android:layout_marginLeft="24dp"
				android:layout_marginRight="24dp"
		  		android:textColor="@color/details_text"
		  		android:textSize="18sp"
			/>			

			<!-- TextView country -->
			<TextView
			    android:id="@+id/contact_details_country" 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginRight="24dp"
		  		android:textColor="@color/details_text"
		  		android:textSize="18sp"
			/>			
									
			<!-- TextView ADDRESS -->
			<TextView 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		  		android:layout_marginLeft="24dp"
		  		android:layout_marginRight="24dp"
		    	android:text="@string/details_address" 
		    	android:textSize="11sp"
			/>	
			
	    </LinearLayout>
	    
	    <View
	        android:id="@+id/contact_details_address_layout_line" 
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
			android:layout_marginTop="10dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"   
	    	android:background="@color/line_seperator"
		/>    
	    
		<pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout 
		    android:id="@+id/contact_details_phone"
			android:layout_width="match_parent"
 			android:layout_height="60dp"   		    
		/>	    
		
	    <View
	        android:id="@+id/contact_details_phone_line" 
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"   
	    	android:background="@color/line_seperator"
		/>
	    
		<pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout 
		    android:id="@+id/contact_details_fax"
			android:layout_width="match_parent"
 			android:layout_height="60dp"   		    
		/>	    
		
	    <View
	        android:id="@+id/contact_details_fax_line" 
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"   
	    	android:background="@color/line_seperator"
		/>

	    <pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout 
		    android:id="@+id/contact_details_email"
			android:layout_width="match_parent"
 			android:layout_height="60dp"   		    
		/>	
	
	    <View 
	        android:id="@+id/contact_details_email_line"
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"   
	    	android:background="@color/line_seperator"
		/>
	    
	    <LinearLayout
	        android:id="@+id/contact_details_nif_layout" 
			android:layout_width="match_parent"
	    	android:layout_height="60dp"
			android:layout_marginTop="20dp"    	
			android:orientation="vertical"
	    >
	        
			<TextView
			    android:id="@+id/contact_details_nif" 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginLeft="24dp"
		  		android:textColor="@color/details_text"
		  		android:textSize="18sp"
			/>
			
			<TextView 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		  		android:layout_marginLeft="24dp"
		    	android:text="@string/contact_details_nif" 
		    	android:textSize="11sp"
			/>	
	    </LinearLayout> 
	    
	    <View
	        android:id="@+id/contact_details_nif_layout_line" 
	    	android:layout_width="match_parent"
	    	android:layout_height="1dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"
	    	android:background="@color/line_seperator"
		/>
	    
	    <View
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	  		android:layout_marginBottom="42dp"    
		/> 	    	
	
	</LinearLayout>
</ScrollView> 