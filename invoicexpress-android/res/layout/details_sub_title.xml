<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
>
    
	    <TextView 
	        android:id="@+id/sub_title_text_view_1"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginBottom="2dp"
	    	android:layout_marginLeft="24dp"
	    	android:layout_marginRight="24dp"
	  		android:textColor="@color/sub_titles_text"
		/>

	    <TextView 
	        android:id="@+id/sub_title_text_view_2"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginBottom="2dp"
	    	android:layout_marginLeft="0dp"
	    	android:layout_marginRight="24dp"
	    	android:layout_toRightOf="@id/sub_title_text_view_1"
	    	android:layout_alignParentRight="true"
	    	android:gravity="right"
	  		android:textColor="@color/sub_titles_text"
		/>
	    	    
	    <View 
	    	android:layout_width="match_parent"
	    	android:layout_height="2dp"
	  		android:layout_marginLeft="18dp"
	  		android:layout_marginRight="18dp"
	  		android:layout_below="@id/sub_title_text_view_1"   
	    	android:background="@color/sub_titles_text_line_seperator"
		/>
    
</RelativeLayout>