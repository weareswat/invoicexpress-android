<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView 
    	android:layout_width="match_parent"
    	android:layout_height="54dp"
    	android:paddingLeft="12dp"
    	android:paddingRight="12dp"
    	android:gravity="center_vertical"   	
    	android:text="@string/doc_details_cancel_dialog_title"
    	android:textSize="18sp"
    	android:textColor="@color/dialog_title_text_color"
    	android:background="@color/dialog_title_background"        
    />
    
    <View 
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:background="@color/line_seperator_top"
	/>
    
    <View 
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:background="@color/line_seperator_bottom_black"
    />
    
    <EditText 
        android:id="@+id/doc_details_cancel_dialog_justification"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="16dp"
    	android:layout_marginBottom="72dp"
    	android:layout_marginLeft="12dp"
    	android:layout_marginRight="12dp"
		android:textSize="16sp"
    	android:hint="@string/doc_details_cancel_dialog_hint"  
    	android:inputType="textMultiLine"
    	style="@style/invoicexpress_EditText"    
	/>
    
</LinearLayout>