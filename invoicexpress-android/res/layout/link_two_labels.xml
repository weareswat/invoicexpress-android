<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
   	android:layout_marginTop="6dp"
   	android:layout_marginBottom="6dp"    	
>
	    
    <TextView
        android:id="@+id/link_label" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="6dp"
    	android:layout_marginRight="6dp"
    	android:layout_marginTop="4dp"
    	android:textColor="@color/details_text"
    	android:textSize="14sp"
	/>
    
	<ImageView
	    android:id="@+id/link_image"
	    android:contentDescription="@string/details_image_description"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
   		android:layout_centerVertical="true"
   		android:src="@drawable/navigation_next_item"
	/>
	
	<View
	    android:id="@+id/link_vertical_line"
   		android:layout_width="1dp"
   		android:layout_height="22dp"
   		android:layout_marginRight="8dp"
   		android:layout_toLeftOf="@id/link_image"
   		android:background="@color/line_seperator"
   		android:layout_centerVertical="true"
	/>
	
	<TextView
        android:id="@+id/link_value" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="12dp"
    	android:layout_marginLeft="12dp"
    	android:layout_marginTop="4dp"
    	android:textColor="@color/details_text"
    	android:textSize="14sp"
    	android:layout_toLeftOf="@id/link_vertical_line"
	/>
	
	<View 
    	android:layout_width="wrap_content"
    	android:layout_height="1dp"
    	android:background="@color/line_seperator"
	    android:layout_below="@id/link_label"
	    android:layout_marginTop="16dp"	    	    
	/>	
    
</RelativeLayout>