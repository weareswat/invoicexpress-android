package pt.rupeal.invoicexpress.fragments;

import pt.rupeal.invoicexpress.R;
import pt.rupeal.invoicexpress.dtos.ContactDetailsDTO;
import pt.rupeal.invoicexpress.layouts.SubTitleLayout;
import pt.rupeal.invoicexpress.layouts.ValueLabelImageLayout;
import android.app.Fragment;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;

public class ContactDetailsFragment extends Fragment {

	public static final int RESULT_CODE = 2;
	
	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState) {
		
		View view = inflater.inflate(R.layout.contact_details, container, false);
		
		ContactDetailsDTO contactdetails = getContactDetails();
		
		((TextView) view.findViewById(R.id.contact_details_title_name)).setText(contactdetails.getName());
		
		((SubTitleLayout) view.findViewById(R.id.contact_details_preferencial_subtitle)).setText(R.string.contact_details_preferencial_title);
		
		((TextView) view.findViewById(R.id.contact_details_preferencial_name)).setText(contactdetails.getPreferencialName());
		
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_phone)).setText(contactdetails.getPreferencialPhone());
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_phone)).setLabel(R.string.contact_details_phone1);
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_phone)).setImage(R.drawable.ic_device_access_call);
		
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_email)).setText(contactdetails.getPreferencialEmail());
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_email)).setLabel(R.string.contact_details_email1);
		((ValueLabelImageLayout) view.findViewById(R.id.contact_details_preferencial_email)).setImage(R.drawable.ic_content_email);
		
		((SubTitleLayout) view.findViewById(R.id.contact_details_general_subtitle)).setMarginTop(64);
		((SubTitleLayout) view.findViewById(R.id.contact_details_general_subtitle)).setText(R.string.contact_details_geral_title);

		((TextView) view.findViewById(R.id.contact_details_general_address)).setText(contactdetails.getAddress());
		((TextView) view.findViewById(R.id.contact_details_general_phone)).setText(contactdetails.getPhone());
		((TextView) view.findViewById(R.id.contact_details_general_fax)).setText(contactdetails.getFax());
		((TextView) view.findViewById(R.id.contact_details_general_email)).setText(contactdetails.getEmail());
		
		((TextView) view.findViewById(R.id.contact_details_general_nif)).setText(contactdetails.getNif());
		
		return view;
	}
	
	private ContactDetailsDTO getContactDetails(){
		
		ContactDetailsDTO contactDetails = new ContactDetailsDTO();
		contactDetails.setName("Duarte Neves");
		
		contactDetails.setPreferencialName("Duarte Neves");
		contactDetails.setPreferencialMobilePhone("(+351) 962949476");
		contactDetails.setPreferencialEmail("duartedbneves@gmail.com");
		
		contactDetails.setAddress("Rua Mário Eloy nº 10");
		contactDetails.setMobilePhone("(+351) 962949476");
		contactDetails.setFax("(+351) 212321653");
		contactDetails.setEmail("duartedbneves@gmail.com");
		contactDetails.setNif("205654886");
		
		return contactDetails;
	}
	
	public int getResultCode(){
		return RESULT_CODE;
	}
}
